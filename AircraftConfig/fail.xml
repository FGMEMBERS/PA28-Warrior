<!-- PA28-161 Control Panel Dialog -->

<PropertyList>

	<name>aircraft-config-fail</name>
	<layout>vbox</layout>

    <group>
        <layout>hbox</layout>
        <text>
            <halign>left</halign>
            <label>System Failures</label>
        </text>
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>
	
	<text>
		<halign>left</halign>
		<label>Failed when Checked</label>
	</text>
	
	<group>
		<layout>hbox</layout>

		<hrule>
			<stretch type="bool">true</stretch>
		</hrule>
		<text>
			<label>ELEC SYS Fail</label>
		</text>
		<hrule>
			<stretch type="bool">true</stretch>
		</hrule>
	</group>
	
	<checkbox>
		<label>BATTERY</label>
		<halign>left</halign>
		<property>/systems/failures/battery</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>ALTERNATOR</label>
		<halign>left</halign>
		<property>/systems/failures/alternator</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>ELEC BUS 1</label>
		<halign>left</halign>
		<property>/systems/failures/elec-1</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>ELEC BUS 2</label>
		<halign>left</halign>
		<property>/systems/failures/elec-2</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>AVIONICS BUS 1</label>
		<halign>left</halign>
		<property>/systems/failures/avionics-1</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>AVIONICS BUS 2</label>
		<halign>left</halign>
		<property>/systems/failures/avionics-2</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<group>
		<layout>hbox</layout>

		<hrule>
			<stretch type="bool">true</stretch>
		</hrule>
		<text>
			<label>FUEL SYS Fail</label>
		</text>
		<hrule>
			<stretch type="bool">true</stretch>
		</hrule>
	</group>
	
	<checkbox>
		<label>ENG SUCK</label>
		<halign>left</halign>
		<property>/systems/failures/eng-suck</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>FUEL PUMP</label>
		<halign>left</halign>
		<property>/systems/failures/fuel-pump</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<group>
		<layout>hbox</layout>

		<hrule>
			<stretch type="bool">true</stretch>
		</hrule>
		<text>
			<label>ENG SYS Fail</label>
		</text>
		<hrule>
			<stretch type="bool">true</stretch>
		</hrule>
	</group>
	
	<checkbox>
		<label>STARTER</label>
		<halign>left</halign>
		<property>/systems/failures/starter</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>L MAGNETO</label>
		<halign>left</halign>
		<property>/systems/failures/l-magneto</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>R MAGNETO</label>
		<halign>left</halign>
		<property>/systems/failures/r-magneto</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<group>
		<layout>hbox</layout>

		<hrule>
			<stretch type="bool">true</stretch>
		</hrule>
		<text>
			<label>OTHER SYS Fail</label>
		</text>
		<hrule>
			<stretch type="bool">true</stretch>
		</hrule>
	</group>
	
	<checkbox>
		<label>L BRAKE</label>
		<halign>left</halign>
		<property>/systems/failures/l-brake</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>R BRAKE</label>
		<halign>left</halign>
		<property>/systems/failures/r-brake</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<checkbox>
		<label>S-TEC 55X</label>
		<halign>left</halign>
		<property>/systems/failures/stec-55x</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<hrule/>
	
	<button>
		<legend>Reset All</legend>
		<halign>center</halign>
		<padding>5</padding>
		<pref-width>120</pref-width>
		<binding>
			<command>nasal</command>
			<script>
			acconfig.failReset();
			</script>
		</binding>
	</button>

</PropertyList>
