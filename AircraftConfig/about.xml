<!-- PA28-161 Aircraft Config Dialog -->

<PropertyList>

	<name>aircraft-config-about</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<text>
			<halign>left</halign>
			<label>About This Aircraft</label>
		</text>
		<button>
			<halign>right</halign>
			<pref-width>20</pref-width>
			<pref-height>20</pref-height>
			<legend>X</legend>
			<key>Esc</key>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<hrule/>
	
	<group>
		<layout>vbox</layout>
		
		<text>
			<halign>left</halign>
			<label>PA28-161 Warrior II by it0uchpods Design Group</label>
		</text>
		<text>
			<halign>left</halign>
			<label>Joshua Davidson (it0uchpods), Jonanthan Redpath (legoboyvdlp)</label>
		</text>
		
		<hrule/>
		
		<text>
			<halign>left</halign>
			<label>FDM: Joshua Davidson (it0uchpods)</label>
		</text>
		<text>
			<halign>left</halign>
			<label>Systems: Joshua Davidson (it0uchpods)</label>
		</text>
		<text>
			<halign>left</halign>
			<label>Cockpit: David Megginson</label>
		</text>
		<text>
			<halign>left</halign>
			<label>Instruments: Joshua Davidson (it0uchpods), c172p-team, Others</label>
		</text>
		<text>
			<halign>left</halign>
			<label>Pre V1.0, Shared Libraries 1.5.0</label>
		</text>
		
	</group>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
		
		<button>
			<halign>center</halign>
			<legend>Go Away</legend>
			<pref-width>210</pref-width>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

</PropertyList>
