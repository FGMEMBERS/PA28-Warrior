<!-- PA28 Aircraft Config Dialog -->

<PropertyList>

	<name>aircraft-config-welcome</name>
	<layout>vbox</layout>
	<color>
		<red>0.5</red>
		<green>0</green>
		<blue>0</blue>
		<alpha>0.95</alpha>
	</color>

	<group>
		<layout>hbox</layout>
		<text>
			<halign>left</halign>
			<label>Something Happened!</label>
		</text>
	</group>
	
	<hrule>
		<color>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<alpha>0.95</alpha>
		</color>
	</hrule>
	
	<group>
		<layout>vbox</layout>
		
		<text>
			<halign>left</halign>
			<label>Unofficial Distributor Detected</label>
		</text>
		
		<hrule>
			<color>
				<red>1.0</red>
				<green>1.0</green>
				<blue>1.0</blue>
				<alpha>0.95</alpha>
			</color>
		</hrule>
		
		<text>
			<halign>left</halign>
			<label>If you get this aircraft from anywhere but Octal450's repo you are not getting the aircraft from IDG, but from a 3rd party distributor.</label>
		</text>
		
		<text>
			<halign>left</halign>
			<label>This is strongly discouraged and you will not receive any support from IDG!</label>
		</text>
	</group>
	
	<hrule>
		<color>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<alpha>0.95</alpha>
		</color>
	</hrule>

	<group>
		<layout>hbox</layout>
		<button>
			<color>
				<red>0.0</red>
				<green>0.5</green>
				<blue>0</blue>
				<alpha>0.95</alpha>
			</color>
			<halign>left</halign>
			<legend>Official Download</legend>
			<pref-width>275</pref-width>
			<binding>
				<command>open-browser</command>
				<path>https://github.com/Octal450/IDG-PA28</path>
			</binding>
		</button>
		<button>
			<color>
				<red>0.6</red>
				<green>0</green>
				<blue>0</blue>
				<alpha>0.95</alpha>
			</color>
			<halign>right</halign>
			<legend>Continue (at own risk)</legend>
			<pref-width>275</pref-width>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
</PropertyList>