<!--
  Animations for the ki525 hsi indicator
  Maintainer: Torsten Dreyer
  Updated for PA28: Joshua Davidson
-->

<PropertyList>
	
	<path>ki525a.ac</path>
	
	<animation>
		<type>scale</type>
		<x-offset>1.00</x-offset>
		<y-offset>0.95</y-offset>
		<z-offset>0.95</z-offset>
	</animation>
	
	<animation>
		<w-base>840</w-base>
		<h-base>840</h-base>
	</animation>

	<params>
		<has-gs>instrumentation/nav[0]/has-gs</has-gs>
		<in-range>instrumentation/nav[0]/in-range</in-range>
		<gs-needle-deflection>instrumentation/nav[0]/filtered-gsNAV0-deflection</gs-needle-deflection>
		<cdi-needle-deflection>instrumentation/kcs55/ki525/cdi-deflection</cdi-needle-deflection>
		<selected-heading>it-stec55x/input/hdg</selected-heading>
		<selected-course>instrumentation/kcs55/ki525/selected-course-deg</selected-course>
		<to-flag>instrumentation/kcs55/ki525/to-flag</to-flag>
		<from-flag>instrumentation/kcs55/ki525/from-flag</from-flag>
		<nav-flag>instrumentation/nav[0]/nav-flag</nav-flag>
		<indicated-heading>instrumentation/kcs55/kg102/indicated-heading-deg</indicated-heading>
		<hdg-flag>instrumentation/kcs55/kg102/flag-norm</hdg-flag>
	</params>
	
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>14</max-m>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>CompassRose</object-name>
		<object-name>TO</object-name>
		<object-name>FROM</object-name>
		<object-name>ArrowHead</object-name>
		<object-name>ArrowTail</object-name>
		<object-name>ArrowBody</object-name>
		<object-name>NAV</object-name>
		<object-name>HDG</object-name>
		<object-name>HDGBug</object-name>
		<object-name>GS</object-name>
		<object-name>GSMarker</object-name>
		<object-name>GSLabel</object-name>
		<object-name>Marker</object-name>
		<object-name>LubberLine</object-name>
		<object-name>CDIPlate</object-name>
		<emission>
			<red>0.6</red>
			<green>0.6</green>
			<blue>0.6</blue>
			<factor-prop>sim/model/material/instruments/factor</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>CompassRose</object-name>
		<property alias="../../params/indicated-heading"/>
		<factor>1.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>-0.001</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HDGBug</object-name>
		<property alias="../../params/indicated-heading"/>
		<factor>1.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HDGBug</object-name>
		<property alias="../../params/selected-heading"/>
		<factor>-1.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HDGSelector</object-name>
		<property alias="../../params/selected-heading"/>
		<factor>-8.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.03097</y-m>
			<z-m>-0.03002</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HDGSelector</object-name>
		<property alias="../../params/indicated-heading"/>
		<factor>8.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.03097</y-m>
			<z-m>-0.03002</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>OBSSelector</object-name>
		<property alias="../../params/selected-course"/>
		<factor>-8.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.03097</y-m>
			<z-m>-0.03002</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>OBSSelector</object-name>
		<property alias="../../params/indicated-heading"/>
		<factor>8.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.03097</y-m>
			<z-m>-0.03002</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>CDIPlate</object-name>
		<object-name>ArrowHead</object-name>
		<object-name>ArrowTail</object-name>
		<object-name>ArrowBody</object-name>
		<object-name>TO</object-name>
		<object-name>FROM</object-name>
		<property alias="../../params/indicated-heading"/>
		<factor>1.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>CDIPlate</object-name>
		<object-name>ArrowHead</object-name>
		<object-name>ArrowTail</object-name>
		<object-name>ArrowBody</object-name>
		<object-name>TO</object-name>
		<object-name>FROM</object-name>
		<property alias="../../params/selected-course"/>
		<factor>-1.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>HDGSelector</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>it-stec55x/input/hdg</property>
				<step>1</step>
				<min>1</min>
				<max>361</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>it-stec55x/input/hdg</property>
				<step>-1</step>
				<min>1</min>
				<max>361</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>heading-bug-hsi</tooltip-id>
				<mapping>headinghsi</mapping>
				<label>Heading Bug: %3d</label>
				<property>it-stec55x/input/hdg</property>
			</binding>
		</hovered>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>OBSSelector</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property alias="../../../../params/selected-course"/>
				<step>1</step>
				<min>1</min>
				<max>361</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property alias="../../../../params/selected-course"/>
				<step>-1</step>
				<min>1</min>
				<max>361</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>nav1-hsi</tooltip-id>
				<label>Nav 1 Course %3d</label>
				<mapping>nav1hsi</mapping>
				<property>instrumentation/kcs55/ki525/selected-course-deg</property>
			</binding>
		</hovered>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>NAV</object-name>
		<property alias="../../params/nav-flag"/>
		<factor>40</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.0217139</y-m>
			<z-m>0.0212677</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HDG</object-name>
		<property alias="../../params/hdg-flag"/>
		<interpolation>
			<entry><ind>0</ind><dep>-40</dep></entry>
			<entry><ind>1</ind><dep>  0</dep></entry>
		</interpolation>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.0217139</y-m>
			<z-m>0.0212677</z-m>
		</center>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>TO</object-name>
		<expression>
			<product>
				<property alias="../../../../params/to-flag"/>
				<property alias="../../../../params/nav-flag"/>
				<value>0.00712488</value>
			</product>
		</expression>
		<axis>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>FROM</object-name>
		<expression>
			<product>
				<property alias="../../../../params/from-flag"/>
				<property alias="../../../../params/nav-flag"/>
				<value>-0.00712488</value>
			</product>
		</expression>
		<axis>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>GS</object-name>
		<property alias="../../params/gs-needle-deflection"/>
		<factor>0.016</factor>
		<axis>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>ArrowBody</object-name>
		<property alias="../../params/cdi-needle-deflection"/>
		<factor>2.0</factor>
		<axis>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</axis>
		<center>
			<x-m>-0.0417058</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>

</PropertyList>
