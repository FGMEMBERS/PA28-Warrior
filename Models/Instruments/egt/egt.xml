<PropertyList> <!-- TODO: Needles don't point to marks properly -->
	
	<path>egt.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Needle</object-name>
		<object-name>Bug</object-name>
		<object-name>Face</object-name>
		<emission>
			<red>0.6</red>
			<green>0.6</green>
			<blue>0.6</blue>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<property>engines/engine[0]/egt-actual</property>
		<factor>-0.05</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.00025</y-m>
			<z-m>-0.00902</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Knob</object-name>
		<property>engines/engine[0]/egt-bug</property>
		<factor>-6</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.00025</y-m>
			<z-m>-0.00902</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Bug</object-name>
		<property>engines/engine[0]/egt-bug</property>
		<factor>-0.05</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.00025</y-m>
			<z-m>-0.00902</z-m>
		</center>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>Knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>engines/engine[0]/egt-bug</property>
				<step>100</step>
				<min>0</min>
				<max>1800</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>engines/engine[0]/egt-bug</property>
				<step>-100</step>
				<min>0</min>
				<max>1800</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>egt-bug</tooltip-id>
				<label>EGT Bug: %4.0f</label>
				<property>engines/engine[0]/egt-bug</property>
			</binding>
		</hovered>
	</animation>

</PropertyList>
